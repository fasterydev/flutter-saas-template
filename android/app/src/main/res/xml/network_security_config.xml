<?xml version="1.0" encoding="utf-8"?>
<!-- Permite HTTP (cleartext) a localhost y redes locales para desarrollo.
     En producciÃ³n usa HTTPS y quita base-config cleartextTrafficPermitted. -->
<network-security-config>
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </base-config>
</network-security-config>
